@{
    ViewData["Title"] = "Expenses";
}

@model List<Expense>

<div class="text-center">
    <h1 class="display-4">Expenses</h1>
    <p>Manage your expenses here.</p>
    <hr>
    <h3>Total Expenses $@ViewBag.TotalExpenses </h3>
    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Amount</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
    <tbody>
        <tr>
            @foreach (var expense in Model)
            {
                <tr>
                    <td>@expense.Id</td>
                    <td>@expense.Description</td>
                    <td>@expense.Amount.ToString("C")</td>
                    <td>@expense.Date.ToShortDateString()</td>
                    <td>
                        <a class="btn btn-primary" asp-action="CreateEditExpense" asp-route-id="@expense.Id">Edit</a> |
                        <a class="btn btn-secondary" asp-action="DeleteExpense" asp-route-id="@expense.Id">Delete</a>
                    </td>
                </tr>
            }
        </tr>
    </tbody>
    </table>
</div>